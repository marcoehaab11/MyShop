@model ProductVM

@{
    ViewBag.PageTitle = "Product Managment";
    ViewBag.Title = "Edit";
    ViewBag.PageHeader = "Product";
    ViewBag.CardTitle = "Edit Product";
    Layout = "~/Views/Shared/_Dashboard.cshtml";

}
    <div class="row">
        <div class="col-md-4">
    <form method="post" enctype="multipart/form-data" asp-action="Edit" >
        <input type="hidden" asp-for="Product.Id"/>    
        <input type="hidden" asp-for="Product.Img"/>    
        <div class="form-group">
            <label asp-for="Product.Name"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
        </div>
      
        <div class="form-group">
            <label asp-for="Product.Description"></label>
                <textarea id="mytextarea" asp-for="Product.Description" class="form-control" /></textarea>
                <span asp-validation-for="Product.Description" class="text-danger"></span>

        </div>
            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Product.Img"  class="control-label"></label>
                <input type="file" name="file" id="imgfile" class="form-control" onchange="fillimg(event)" />
               

            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId"></label>
                <select asp-for="Product.CategoryId" asp-items="Model.Categorylist" class="form-control">
                    <option disabled selected> ---Select Item---</option>

               </select>
           

            </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Update</button>
       
        </div>
       
</form>
    </div>
         <div class="col-md-4">
             <div class="container">
            <img src="~/@Model.Product.Img" id="ImagePrevew" width="300" height="300" />
             </div>
         </div>
    </div>
<button asp-action="Index" asp-controller="Product" class="btn btn-secondary">Back to List</button>

@section Scripts
{
       <partial name="_ValidationScriptsPartial">
        <script>
            tinymce.init({
                selector: '#mytextarea'
            });
            var fillimg=function(event)
            {
                var imgholder=document.getElementById("ImagePrevew");
                imgholder.src=URL.createObjectURL(event.target.files[0]);
            }
        </script>
}