@model ProductVM

@{
    ViewBag.PageTitle = "Product Managment";
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Dashboard.cshtml";

}
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-action="DeleteProduct">
            <input type="hidden" asp-for="Product.Id" />
            <input type="hidden" asp-for="Product.Img" />

            <div class="form-group">
                <label asp-for="Product.Name"></label>
                <input disabled asp-for="Product.Name" class="form-control" />
             
            </div>
            <div class="form-group">
                <label asp-for="Product.Description"></label>
                <input disabled asp-for="Product.Description" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Product.Price"></label>
                <input disabled asp-for="Product.Price" class="form-control" />

            </div>           
            <div class="form-group">
                <label asp-for="Product.CategoryId"></label>
                <select disabled asp-for="Product.CategoryId" asp-items="Model.Categorylist" class="form-control">
                    <option disabled selected> ---Select Item---</option>

                </select>


            </div>
            <div class="form-group">
                <button  type="submit" class="btn btn-primary" asp-action="DeleteProduct" asp-route-Id="@Model.Product.Id">Delete</button>

            </div>

        </form>
    </div>
    <div class="col-md-6">
        <div class="container">
            <img src="~/@Model.Product.Img" width="300" height="300" />
        </div>
    </div>
</div>
<button asp-action="Index" asp-controller="Product" class="btn btn-secondary">Back to List</button>

@section Scripts
{
    <partial name="_ValidationScriptsPartial">

}
