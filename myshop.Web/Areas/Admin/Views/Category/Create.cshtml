@model Category
@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.Title = "Create";
    ViewBag.PageHeader = "Category";
    ViewBag.CardTitle = "Add New Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
}
<form method="post" >
    <div class="row">
        <div class="col-md-4">


        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
      
        <div class="form-group">
            <label asp-for="Description"></label>
                <textarea id="mytextarea" asp-for="Description" class="form-control" /></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>

        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Create</button>
       
            <button asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back to List</button>
        </div>
        </div>
    </div>
</form>

@section Scripts
{
       <partial name="_ValidationScriptsPartial">
        <script>
            tinymce.init({
                selector: '#mytextarea'
            });
        </script>
        
}