@model IEnumerable<Category>

@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.Title = "Categories List";
    ViewBag.CardTitle = "View Categories";
    ViewBag.PageHeader = "Category";
    Layout = "~/Views/Shared/_Dashboard.cshtml";


}


<div style="padding-bottom: 20px;">
    <a asp-action="Create" class="btn btn-primary">Create New Category </a>

</div>
<div>


<table class="table table-hover">
    <thead class="text-bold">
    <tr>
        <td>Name</td>
        <td>Description</td>
        <td>Data Created</td>
        <td>Actions</td>

    </tr>
        </thead>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@Html.Raw(@item.Description)</td>
            <td>@item.CreatedTime</td>
            <td>
                <a asp-action="Edit"  asp-route-id="@item.Id" class="btn btn-success">Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
            

        </tr>
    }
</table>
</div>

@section Scripts{
    <partial name="_Toaster">

}