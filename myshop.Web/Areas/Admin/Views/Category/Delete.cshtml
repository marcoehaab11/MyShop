@model Category
@{
    ViewBag.PageTitle = "Category Managment";
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewBag.PageHeader = "Category";
    ViewBag.CardTitle = "Delete Category";


}
<form method="post" asp-action="DeleteCategory"  asp-route-id="@Model.Id">
    <div class="mb-3">
        <label asp-for="Id">Id : @Model.Id</label>
    </div>
    <div class="mb-3">
        <label asp-for="Name"></label>
        <input asp-for="Name" disabled class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Description"></label>
        <input asp-for="Description" disabled class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-danger" >Delete</button>
        <button asp-action="Index" asp-controller="Category" class="btn btn-secondary">Back to List</button>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial">

}
