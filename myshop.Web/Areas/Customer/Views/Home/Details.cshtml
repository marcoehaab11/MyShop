@model ShoppingCard
<form method="post">
<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/@Model.product.Img" alt="..." width="600" height="700" ></div>
            <div class="col-md-6">
                <div class="small mb-1">@Model.product.Category.Name</div>
                <h1 class="display-5 fw-bolder">@Model.product.Name</h1>
                <div class="fs-5 mb-5">
                    <input hidden asp-for="@Model.ProductId" />
                        <input hidden asp-for="@Model.Id" />

                    <span class="text-decoration-line-through">@Model.product.Price</span>
                    <span>$40.00</span>
                </div>
                <p class="lead">@Html.Raw(@Model.product.Description)</p>
                <div class="d-flex">
                    <input class="form-control text-center me-3" id="inputQuantity" type="number" asp-for="Count" style="max-width: 3.5rem">
                    <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Add to cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
</form>